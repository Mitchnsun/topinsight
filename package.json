{
    "name": "topinsight",
    "version": "1.0.0",
    "description": "Topinsight project",
    "main": "js/cv.js",
    "scripts": {
        "prepare": "npm run prepare:www && sudo cordova platform add browser",
        "prepare:www": "mkdir -p www/js && mkdir -p www/css && cp work/index.html www && cp -r work/assets www",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "npm run build:css && npm run build:js",
        "build:css": "lessc work/less/config.less www/css/index.css",
        "build:js": "uglifyjs work/js/*.js -o www/js/index.js -c --source-map www/js/index.js.map",
        "dev": "cordova run -- --live-reload"
    },
    "repository": {
        "type": "git",
        "url": "git+https://matthieu_comperat@bitbucket.org/matthieu_comperat/topinsight.git"
    },
    "author": "Matthieu Comp√©rat",
    "license": "ISC",
    "homepage": "https://bitbucket.org/matthieu_comperat/topinsight#readme",
    "dependencies": {
        "backbone": "^1.3.3",
        "less": "^2.7.1",
        "reset-css": "^2.2.0",
        "uglify-js": "^2.7.5"
    }
}