{
    "name": "topinsight",
    "version": "1.0.0",
    "description": "Topinsight project",
    "main": "js/cv.js",
    "scripts": {
        "prepare": "npm run prepare:folders && sudo cordova platform add browser",
        "prepare:folders": "mkdir -p www/js && mkdir -p www/css && mkdir -p work/dist && npm run prepare:copy",
        "prepare:copy": "cp work/index.html www && cp -r work/assets www",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:dev": "npm run prepare:copy && npm run build:css && npm run copy:map && npm run build:js",
        "build:css": "lessc work/less/config.less www/css/output.css",
        "build:js": "handlebars work/tpl/*.html -f work/dist/tpl.js && node scripts/uglify.js",
        "copy:map": "cp -r work/js www",
        "dev": "cordova run -- --live-reload"
    },
    "repository": {
        "type": "git",
        "url": "git+https://matthieu_comperat@bitbucket.org/matthieu_comperat/topinsight.git"
    },
    "author": "Matthieu Comp√©rat",
    "license": "ISC",
    "homepage": "https://bitbucket.org/matthieu_comperat/topinsight#readme",
    "dependencies": {
        "backbone": "^1.3.3",
        "handlebars": "^4.0.6",
        "jquery": "^3.1.1",
        "less": "^2.7.1",
        "reset-css": "^2.2.0",
        "uglify-js": "^2.7.5"
    },
    "devDependencies": {}
}