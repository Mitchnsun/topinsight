<?xml version='1.0' encoding='utf-8'?>
<widget id="com.geoks.topinsight" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Topinsight</name>
    <description>
        Tracking Application
    </description>
    <author email="matthieu.comperat@gmail.com" href="http://mcomper.at">
        Geoks Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <universal-links>
        <host name="play.google.com">
            <path url="/store/apps/details?id=com.geoks.topinsight" />
        </host>
        <host name="itunes.apple.com">
            <path url="/fr/app/topinsight" />
        </host>
    </universal-links>
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="res/screen/android/splashscreen.png" />
        <splash density="land-ldpi" src="res/screen/android/splashscreen.png" />
        <splash density="land-mdpi" src="res/screen/android/splashscreen.png" />
        <splash density="land-xhdpi" src="res/screen/android/splashscreen.png" />
        <splash density="port-hdpi" src="res/screen/android/splashscreen.png" />
        <splash density="port-ldpi" src="res/screen/android/splashscreen.png" />
        <splash density="port-mdpi" src="res/screen/android/splashscreen.png" />
        <splash density="port-xhdpi" src="res/screen/android/splashscreen.png" />
        <icon density="ldpi" src="res/android/ldpi.png" />
        <icon density="mdpi" src="res/android/mdpi.png" />
        <icon density="hdpi" src="res/android/hdpi.png" />
        <icon density="xhdpi" src="res/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <preference name="target-device" value="handset" />
        <icon height="180" src="res/app-icons/icon180.png" width="180" />
        <icon height="60" src="res/app-icons/icon60.png" width="60" />
        <icon height="120" src="res/app-icons/icon120.png" width="120" />
        <icon height="40" src="res/app-icons/icon40.png" width="40" />
        <icon height="80" src="res/app-icons/icon80.png" width="80" />
        <icon height="57" src="res/app-icons/icon57.png" width="57" />
        <icon height="114" src="res/app-icons/icon114.png" width="114" />
        <icon height="29" src="res/app-icons/icon29.png" width="29" />
        <icon height="58" src="res/app-icons/icon58.png" width="58" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="assets/img/splashscreen.png" />
        <preference name="SplashScreenWidth" value="375" />
        <preference name="SplashScreenHeight" value="667" />
    </platform>
    <engine name="ios" spec="~4.3.1" />
    <engine name="android" spec="~6.0.0" />
    <engine name="browser" spec="~4.1.0" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashScreenBackgroundColor" value="#FFF" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="blackcontent" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-browsersync" spec="~0.1.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
    <plugin name="cordova-plugin-ble-central" spec="~1.1.4">
        <variable name="BLUETOOTH_USAGE_DESCRIPTION" value="Topinsight" />
    </plugin>
    <plugin name="cordova-plugin-mauron85-background-geolocation" spec="~2.2.5">
        <variable name="ACCOUNT_TYPE" value="$PACKAGE_NAME.account" />
        <variable name="CONTENT_AUTHORITY" value="$PACKAGE_NAME" />
        <variable name="ALWAYS_USAGE_DESCRIPTION" value="Cette application nécessite un suivi de la géolocalisation en arrière-plan" />
    </plugin>
    <plugin name="cordova-plugin-statusbar" spec="~2.2.1" />
    <plugin name="cordova-plugin-facebook4" spec="~1.7.4">
        <variable name="APP_ID" value="1354634814611917" />
        <variable name="APP_NAME" value="Topinsight" />
    </plugin>
    <plugin name="cordova-universal-links-plugin" spec="~1.2.1" />
</widget>
